# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true

# Set default charset
[*.{js,py,json}]
charset = utf-8

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[{sites.json,gulpfile.js}]
indent_style = space
indent_size = 4
